<% if @service.errors.any? %>
$("ul.errors").html('')
<% @facility.errors.full_messages.each do |message| %>
$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
<% end %>
<% else %>
$('#notifications').html('<div class="alert alert-success alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button> <%=t('service.notify.create_success')%></div>')
$('#new-service').html('')
// $('#list-facility').html('<%= escape_javascript(render 'index') %>')

setTimeout(function () {
    $('div.alert.alert-success.alert-dismissible').alert('close');
}, 1500);
<% end %>

