<div class="modal-header">
  <h4 class="modal-title"><%= t('feedback.index.reply_to') %> <b><%= @feedback.user.name %></b> <%= t('feedback.index.about') %> <b><%= @feedback.title%> </b></h4>
</div>
<%= form_for @reply , url: reply_path, :remote => true  do |f|  %>
<div class="modal-body">
 <%= f.hidden_field :feedback_id , {value: @feedback.id } %>
 <%= f.text_area :content , :class => "form-control"  %> 

</div>
<div class="modal-footer">
  <%= link_to t("feedback.index.btn_cancel"), '#', { class: 'btn btn-default', data: { dismiss: 'modal'} } %>
<%= f.submit t("feedback.index.btn_submit") , :class => "btn btn-success" %> 

</div>
 <% end%>	
