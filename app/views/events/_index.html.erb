<div class="page-header">
  <%= link_to new_event_path, :class => 'btn btn-primary', :remote => true do %>
      <span class="glyphicon glyphicon-plus"></span>
      Add New Event
  <% end %>
  <h1>Listing events</h1>
</div>

<% @events.each do |event| %>
    <div class="row">
      <div class="col-sm-2 align-center">
        <% if event.event_images.size > 0 %>
            <%= image_tag event.event_images[0].image.url(:thumb), :class => 'img-thumbnail' %>
        <% else %>
            <%= image_tag 'no-image.jpg', :class => 'img-thumbnail' %>
        <% end %>
      </div>
      <div class="col-sm-8">
        <div class="row">
          <div class="col-sm-12">
            <h3><%= event.name %></h3>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            Date:
          </div>
          <div class="col-sm-10">
            <%= event.date %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            Time:
          </div>
          <div class="col-sm-10">
            <%= event.event_start.strftime('%I:%M %P') if !event.event_start.nil? %>
            To <%= event.event_end.strftime('%I:%M %P') if !event.event_end.nil? %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            Location:
          </div>
          <div class="col-sm-10">
            <%= event.location %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            Organiser:
          </div>
          <div class="col-sm-10">
            <%= event.organiser %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-2">
            Description:
          </div>
          <div class="col-sm-10">
            <%= event.description %>
          </div>
        </div>
      </div>
      <div class="col-sm-2">
        <a class="glyphicon glyphicon-trash"><%= link_to ' Delete event', event, method: :delete, data: {confirm: 'Confirm delete Event?'} %></a>
        <br>
        <a class="glyphicon glyphicon-pencil"><%= link_to ' Edit event', edit_event_path(event), :remote => true %></a>
        <br><br>
        <%= link_to 'Show more', event, :class => 'btn btn-info', :remote => true %>
      </div>
    </div>
    <hr>
<% end %>