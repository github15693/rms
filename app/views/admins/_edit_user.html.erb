<%= form_for @user, url: update_user_path ,html: {:class => "form-horizontal" , role: "form" }, remote: true do |f| %>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel"><%=t('admin.new.update_user') %> </h4>
      </div>
      <div class="modal-body">

        <div class="form-group">
          <%= f.label :username,t('admin.new.username') , :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.text_field :username, autofocus: true, :class => "form-control", 'disabled' => true %></div>
        </div>
        <div class="form-group">
          <%= f.label :email, t('admin.new.email'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.email_field :email, :class => "form-control", 'disabled' => true %></div>
        </div>
        <div class="form-group">
          <%= f.label :name, t('admin.new.name'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.text_field :name, :class => "form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.label :phone, t('admin.new.phone'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.text_field :phone, :class => "form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.label :city, t('admin.new.city'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.text_field :city, :class => "form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.label :country, t('admin.new.country'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.text_field :country, :class => "form-control" %></div>
        </div>
         <%= f.hidden_field :condo_id , {value: current_user.condo_id} %>
      </div>
      <div class="modal-footer">
        <div>
          <button type="button" class="btn btn-danger" data-dismiss="modal">
          <%= t('admin.new.close')%></button>
          <%= f.submit t('admin.new.create'), :class => "btn btn-success" %></div>
      </div>
<% end %>