<div class="modal-header">
  <h4 class="modal-title"><%= t('admin.confirm.destroy_user') %></h4>
</div>
<div class="modal-body">
  <span><%= t('admin.confirm.you_really_want') %></span>
</div>
<div class="modal-footer">
  <%= link_to t('admin.confirm.confirm'), delete_user_path(@user), {class: 'btn btn-danger', method: :delete, remote: true} %>
  <%= link_to t('admin.confirm.cancel'), '#', {class: 'btn btn-default', data: {dismiss: 'modal'}} %>
</div>
