<div class="">
  <b class="floatLeft">Guards on duty</b>

  <div class="text-right">
    <button type="button" id = 'modal-guard-house-image' class="btn btn-default" data-toggle="modal" data-target=".bs-example-modal-sm">Add more
      photo
    </button>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <%= form_for @guard_house, url: delete_photo_guard_houses_path, :html => {:multipart => true, :class => "form-horizontal", method: 'post'} do |f| %>
    <% if  @guard_house_images.size > 0 %>
        <div class="form-group">
          <div class="col-sm-12 paddingTop20px">
            <div class="div-frame-guard-house-edit margin-auto">
              <% @guard_house_images.each do |guard_house_image| %>
                  <div class="floatLeft padding-left-30 paddingTop20px in_place_class width-180">
                    <%= image_tag guard_house_image.image_path.url(:thumbnail), :class => "img-thumbnail" %>
                    <br><br>
                    <%= best_in_place guard_house_image, :name,url:'/home', :type => :input, :nil => "Click to edit!" %>
                    <br><br>
                    <%= check_box_tag 'image_id[]', guard_house_image.id %> Delete
                  </div>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
        <div class="text-center">
        <%= f.submit "Cancel", :class => "btn btn-danger" %>
        <%= f.submit "Submit", :class => "btn btn-success" %>
        </div>
        <% end %>
  </div>
</div>