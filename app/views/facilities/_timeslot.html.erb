<div class="modal-header">
  <h4 class="modal-title">Edit TimeSlot</h4>
</div>
<%= form_for(@timeslot,url: add_timeslot_path, :remote => true  ,
html: { :class => "form-horizontal",:role =>"form" }) do |f| %>
<div class="modal-body">
  <table class="content table table-bordered">
<%= render 'content_timeslot' %>
    </table>
  <%= f.hidden_field :facility_id, { value: @facility.id } %>    
<%= f.label :slot_start , 'Add TimeSlot'%>

   <div class="row">
    <div class='col-sm-3'>
     <div class='input-group date' id='datetimepicker1'>
     <%= f.text_field :slot_start , :class => "form-control start" %>
        <span class="input-group-addon"><span class="glyphicon glyphicon-time">
          
        </span></span>
    </div>
    </div>
     <div class='col-sm-1'>
     <p>To</p> 
     </div>
      <div class='col-sm-3'>
       <div class='input-group date' id='datetimepicker2'>
     <%= f.text_field :slot_end , :class => "form-control end" %>
        <span class="input-group-addon"><span class="glyphicon glyphicon-time">
          
        </span></span>
    </div>

      </div>    
    
   </div> 
   <div class="btn">
          <%= link_to 'Cancel', '#', { class: 'btn btn-danger', data: { dismiss: 'modal'} } %>
   <%= f.submit "Submit" , class: "btn btn-success"  %>

   </div>

</div>

<% end %>


        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker({
                    pickDate: false
                });
                $('#datetimepicker2').datetimepicker({
                    pickDate: false
                });
            });
        </script>
