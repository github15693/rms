<% if @facility.errors.any? %>
$("ul.errors").html('')
<% @facility.errors.full_messages.each do |message| %>
$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
<% end %>
<% else %>
$('#notifications').html('<div class="alert alert-success alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button> <%= !@persisted ? t('facility.notify.create_success') : t('facility.notify.update_success') %></div>')
$('#new-facility').html('')
$('#list-facility').html('<%= escape_javascript(render 'index') %>')

setTimeout(function () {
    $('div.alert.alert-success.alert-dismissible').alert('close');
}, 1500);
<% end %>

