<%= form_for(@bulletin, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @bulletin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@bulletin.errors.count, "error") %> prohibited this bulletin from being saved:</h4>

      <ul>
      <% @bulletin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <div class="col-sm-10">
      dsa <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field:date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, :class => "form-control", rows: 5 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :send_notify, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :send_notify, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to 'Cancel', bulletins_path, :class => 'btn btn-default' %>
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
