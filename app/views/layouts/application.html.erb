<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Resident Management System</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <%= favicon_link_tag 'fav.png' %>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js", "https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js" %>
  <![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <%= image_tag 'innoria_logo2.png' %>
      </div>
      <div class="col-lg-9">
       <div class="float-right">
         <% if user_signed_in? %>
           <p>
             Hi, <%= current_user.username %>
             <%= link_to profile_path(current_user), class: "glyphicon glyphicon-cog" do end %>
             <%= link_to 'Sign Out', destroy_user_session_path, method: :delete , class: "btn btn-primary" %>
           </p>
        <% end %>
       </div>
      </div>
    </div>

    <div id="notifications"></div>

    <div class="row padding-20-px">
      <div class="col-lg-12">
        <%= link_to 'Home', homes_path, { class: "btn btn-primary menu #{session[:menustatus] == 'home' ? 'active' : ''}" } %>
        <%= link_to 'Bookings', bookings_path, { class: "btn btn-primary menu #{session[:menustatus] == 'bookings' ? 'active' : ''}" } %>
        <%= link_to 'Bulletin', bulletins_path, { class: "btn btn-primary menu #{session[:menustatus] == 'bulletins' ? 'active' : ''}" } %>
        <%= link_to 'Condo Info', '#', { class: "btn btn-primary menu #{session[:menustatus] == 'condoInfos' ? 'active' : ''}" } %>
        <%= link_to 'Events', events_path, { class: "btn btn-primary menu #{session[:menustatus] == 'events' ? 'active' : ''}" } %>
        <%= link_to 'Facilities',  facilities_path, { class: "btn btn-primary menu #{session[:menustatus] == 'facilities' ? 'active' : ''}" } %>
        <%= link_to 'Feedback', '#', { class: "btn btn-primary menu #{session[:menustatus] == 'feedbacks' ? 'active' : ''}" } %>
        <%= link_to 'Forms', '#', { class: "btn btn-primary menu #{session[:menustatus] == 'forms' ? 'active' : ''}" } %>
        <%= link_to 'Guard House', '#', { class: "btn btn-primary menu #{session[:menustatus] == 'guard_houses' ? 'active' : ''}" } %>
        <%= link_to 'House Rules', house_rules_path, { class: "btn btn-primary menu #{session[:menustatus] == 'house_rules' ? 'active' : ''}" } %>
      </div>
    </div>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, class: "alert alert-#{ name  ==  :error ? "danger" : "success" } alert-dismissable" do %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= msg %>
      <% end %>
    <% end %>

    <div>
      <%= yield %>
    </div>

    <div class="row">
      <div class="footer">
        <p>Â© Innoria Company</p>
      </div>
    </div>
  </div>
 </div>
</body>
</html>

