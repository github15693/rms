<%  if resource.errors.any? %>
$("input#user_password").val('');
$("input#user_password_confirmation").val('');
$("div#errors").remove();
$('<div id="errors" class="alert alert-warning"><p>Please correct the following <%= pluralize(resource.errors.count, "error") %>:</p><ul><% resource.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %></ul></div>').insertAfter('div.modal-body');
<% else %>
location.reload();
<% end %>