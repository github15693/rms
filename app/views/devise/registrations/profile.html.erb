<h2>Setting page</h2>
<hr/>
<div class = "row">
<div class = "col-sm-3">
<% if current_user.avatar? %>
<%= image_tag  current_user.avatar.url(:big) %>
<%else %>

<%= image_tag  "default-user-picture.gif" %>

<%end %>
</div>
<div class = "col-sm-6">
<p>UserName : <%= current_user.username %> </p>
<p>Name : <%= current_user.name %> </p>
<p>Company : <%= current_user.company %> </p>
<p>Email  : <%= current_user.email %> </p>
<p>Country : <%= current_user.country %> </p>
<p>City : <%= current_user.city %> </p>
<p>Zip : <%= current_user.postal_code %> </p>
<p>Phone : <%= current_user.phone %> </p>
</div>
<div class = "col-sm-1">
<%= link_to "Edit" , edit_user_registration_path %>
</div> 
</div>
<hr/>
<%= render partial: "devise/shared/change_password" %>

