<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "sign_up",
                                                                                           :class => "form-horizontal",
                                                                                           :role => "form"},
             :format => :json,
             :remote => true) do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t('user.sign_up.join_us') %></h4>
      </div>
      <div class="modal-body">

        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :username,t('user.profile.username') ,:class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.text_field :username, autofocus: true, :class => "form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.label :email,t('user.profile.email') ,:class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.email_field :email, :class => "form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.label :phone, t('user.profile.phone'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.text_field :phone, :class => "form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.label :condo_id, t('user.sign_up.condo_name'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.collection_select :condo_id, @condo, :id, :name, {}, {:class => "form-control"} %></div>
        </div>
        <div class="form-group">
          <%= f.label :postal_code, t('user.sign_up.postal_code'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.text_field :postal_code, :class => "form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.label :enquiry,t('user.sign_up.enquiry'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.text_area :enquiry, :class => "form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.label :password, t('user.sign_up.password'),:class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.password_field :password, autocomplete: "off", :class => "form-control" %></div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation,t('user.sign_up.password_confirmation'), :class => 'col-sm-4 control-label' %>
          <div class='col-sm-8'>
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
          </div>
        </div>


      </div>
      <div class="modal-footer">
        <div>
          <button type="button" class="btn btn-danger" data-dismiss="modal">
<%= t('user.sign_up.btn_cancel')%></button>
          <%= f.submit t('user.sign_up.btn_signup'), :class => "btn btn-success" %></div>
      </div>
    </div>
<% end %>
