<% @house_rules.each do |house_rule| %>
  <div class="row house-rule-<%= house_rule.id %>">
    <div class="col-xs-10">
      <h4><b><%= house_rule.title %></b></h4>
      <p><b>Content:</b></p>
      <%= simple_format(house_rule.content.truncate(450, separator: '\n', omission: '... (continued, please click View More)'), { class: 'keep-format' }) %>
      <%= link_to 'View More', house_rule, { class: 'btn btn-default show-button', remote: true } %>
    </div>
    <div class="col-xs-2 house-rule-center">
      <div class="vcenter">
        <%= link_to confirm_house_rule_path(house_rule), { class: 'btn btn-link', remote: true } do %>
          <span class="glyphicon glyphicon-trash"></span> Delete House Rule
        <% end %>
        <%= link_to edit_house_rule_path(house_rule), { class: 'btn btn-link', remote: true } do %>
          <span class="glyphicon glyphicon-pencil"></span> Edit House Rule
        <% end %>
      </div>
    </div>
  </div>
  <hr>
<% end %>

